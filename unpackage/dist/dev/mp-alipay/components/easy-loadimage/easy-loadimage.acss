
.easy-loadimage.data-v-214bde04 {
	position: relative;
}
.border-img.data-v-214bde04 {
	position: absolute;
	width: 100%;
	height: 100%;
	/* max-height: 360rpx; */
	top: 0;
	left: 0;
}

/* 官方优化图片tips */
image.data-v-214bde04 {
	will-change: transform
}

/* 渐变过渡效果处理 */
image.origin-img.data-v-214bde04 {
	width: 100%;
	height: 100%;
	opacity: 0.3;
	/* max-height: 360rpx; */
}
image.origin-img.show-transition.data-v-214bde04 {
	transition: opacity .5s;
	opacity: 1;
}
image.origin-img.no-transition.data-v-214bde04 {
	opacity: 1;
}

/* 渐变过渡效果处理 */
image.border-img.data-v-214bde04 {
	width: 100%;
	height: 100%;
	opacity: 0.3;
	/* max-height: 360rpx; */
}
image.border-img.show-transition.data-v-214bde04 {
	transition: opacity .5s;
	opacity: 1;
}
image.border-img.no-transition.data-v-214bde04 {
	opacity: 1;
}

/* 加载失败、加载中的占位图样式控制 */
.loadfail-img.data-v-214bde04 {
	height: 100%;
	background: url(/static/easy-loadimage/loadfail.png) no-repeat center;
	background-size: 50%;
}
.loading-img.data-v-214bde04 {
	height: 100%;
}

/* 转圈 */
.spin-circle.data-v-214bde04 {
	background: url(/static/easy-loadimage/loading.png) no-repeat center;
	background-size: 60%;
}

/* 动态灰色若隐若现 */
.looming-gray.data-v-214bde04 {
	-webkit-animation: looming-gray-data-v-214bde04 1s infinite linear;
	        animation: looming-gray-data-v-214bde04 1s infinite linear;
	background-color: #e3e3e3;
	border-radius: 12rpx;
}
@-webkit-keyframes looming-gray-data-v-214bde04 {
0% {
		background-color: #e3e3e3aa;
}
50% {
		background-color: #e3e3e3;
}
100% {
		background-color: #e3e3e3aa;
}
}
@keyframes looming-gray-data-v-214bde04 {
0% {
		background-color: #e3e3e3aa;
}
50% {
		background-color: #e3e3e3;
}
100% {
		background-color: #e3e3e3aa;
}
}

/* 骨架屏1 */
.skeleton-1.data-v-214bde04 {
	background-color: #e3e3e3;
	background-image: linear-gradient(100deg, rgba(255, 255, 255, 0), rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 80%);
	background-size: 100rpx 100%;
	background-repeat: repeat-y;
	background-position: 0 0;
	-webkit-animation: skeleton-1-data-v-214bde04 .6s infinite;
	        animation: skeleton-1-data-v-214bde04 .6s infinite;
}
@-webkit-keyframes skeleton-1-data-v-214bde04 {
to {
		background-position: 200% 0;
}
}
@keyframes skeleton-1-data-v-214bde04 {
to {
		background-position: 200% 0;
}
}

/* 骨架屏2 */
.skeleton-2.data-v-214bde04 {
	background-image: linear-gradient(-90deg, #fefefe 0%, #e6e6e6 50%, #fefefe 100%);
	background-size: 400% 400%;
	background-position: 0 0;
	-webkit-animation: skeleton-2-data-v-214bde04 1.2s ease-in-out infinite;
	        animation: skeleton-2-data-v-214bde04 1.2s ease-in-out infinite;
}
@-webkit-keyframes skeleton-2-data-v-214bde04 {
to {
		background-position: -135% 0;
}
}
@keyframes skeleton-2-data-v-214bde04 {
to {
		background-position: -135% 0;
}
}

