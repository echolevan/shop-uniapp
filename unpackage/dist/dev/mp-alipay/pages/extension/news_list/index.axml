<view style="{{(colorStyle)}}"><view class="newsList"><block a:if="{{imgUrls.length>0}}"><view class="swiper"><swiper indicator-dots="true" autoplay="{{autoplay}}" circular="{{circular}}" interval="{{interval}}" duration="{{duration}}" indicator-color="rgba(102,102,102,0.3)" indicator-active-color="#666"><block a:for="{{imgUrls}}" a:for-item="item" a:for-index="index" a:key="index"><swiper-item><navigator url="{{'/pages/extension/news_details/index?id='+item.id}}"><image class="slide-image" src="{{item.image_input[0]}}"></image></navigator></swiper-item></block></swiper></view></block><block a:if="{{navList.length>0}}"><view class="nav"><scroll-view class="scroll-view_x" style="width:auto;overflow:hidden;" scroll-x="{{true}}" scroll-with-animation="{{true}}" scroll-left="{{scrollLeft}}"><block a:for="{{navList}}" a:for-item="item" a:for-index="index" a:key="index"><view class="{{(('item')+' '+(active==item.id?'on':''))}}" id="{{'news_'+item.id}}" data-event-opts="{{[['tap',[['tabSelect',['$0',index,'$1'],[[['navList','',index,'id']],[['navList','',index]]]]]]]}}" onTap="__e"><view>{{item.title}}</view><block a:if="{{active==item.id}}"><view class="line bg-color"></view></block></view></block></scroll-view><block a:if="{{coutList.length}}"><scroll-view class="scroll-view_x" style="width:auto;overflow:hidden;" scroll-x="{{true}}" scroll-with-animation="{{true}}"><view class="coutry-list"><view data-event-opts="{{[['tap',[['getCidArticle',['$0',1],[[['coutList','',index,'id']]]]]]]}}" class="{{(('coutry')+' '+(activeCou==coutry.id?'on':''))}}" onTap="__e" a:for="{{coutList}}" a:for-item="coutry" a:for-index="index" a:key="index">{{''+coutry.title+''}}</view></view></scroll-view></block></view></block><view class="list"><block a:for="{{articleList}}" a:for-item="item" a:for-index="index" a:key="index"><block a:if="{{item.image_input.length==1}}"><navigator class="item acea-row row-between-wrapper" url="{{'/pages/extension/news_details/index?id='+item.id}}" hover-class="none"><view class="text acea-row row-column-between"><view class="name line2">{{item.title}}</view><view>{{item.add_time}}</view></view><view class="pictrue"><image src="{{item.image_input[0]}}"></image></view></navigator></block><block a:else><block a:if="{{item.image_input.length==2}}"><navigator class="item" url="{{'/pages/extension/news_details/index?id='+item.id}}" hover-class="none"><view class="title line1">{{item.title}}</view><view class="picList acea-row row-between-wrapper"><block a:for="{{item.image_input}}" a:for-item="itemImg" a:for-index="indexImg" a:key="indexImg"><view class="pictrue"><image src="{{itemImg}}"></image></view></block></view><view class="time">{{item.add_time}}</view></navigator></block><block a:else><block a:if="{{item.image_input.length>2}}"><navigator class="item" url="{{'/pages/extension/news_details/index?id='+item.id}}" hover-class="none"><view class="title line1">{{item.title}}</view><view class="picList on acea-row row-between-wrapper"><block a:for="{{item.image_input}}" a:for-item="itemImg" a:for-index="indexImg" a:key="indexImg"><view class="pictrue"><image src="{{itemImg}}"></image></view></block></view><view class="time">{{item.add_time}}</view></navigator></block></block></block></block></view></view><block a:if="{{articleList.length==0&&(page!=1||active==0)}}"><view class="noCommodity"><view class="emptyBox"><image src="{{imgHost+'/statics/images/empty-box.png'}}"></image></view></view></block></view>